<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-4.0.xsd">
     
     <context:component-scan base-package="com.anotherexample.spring_2example" />
    <bean id="ColorClass" class="com.anotherexample.spring_2example.ColorClass">
        <property name="color" value="red"></property>
      <property name="price" value="200000"></property>
   </bean> 
   <bean id="ConInj" class="com.anotherexample.spring_2example.ConInj">
   <constructor-arg index="0" value="new updated version"></constructor-arg>
   </bean>
</beans>